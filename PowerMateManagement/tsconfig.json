{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["./types"],
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/env.d.ts"
  ]
}
